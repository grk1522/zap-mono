# ==========================================
# ====== Threading Configuration ===========
# ==========================================
# File: config/threading.env
# Description: Environment variables for threaded ZapBot

# Threading Configuration
THREADING_ENABLED=true
MAX_WORKER_MEMORY=1GB
WORKER_RESTART_DELAY=5000
MAX_CONCURRENT_TRADES=50
MAX_QUEUE_SIZE=1000
HEARTBEAT_INTERVAL=30000

# Worker-specific configurations
MAX_CONCURRENT_ANALYSIS=5
MAX_CONCURRENT_DB_OPERATIONS=10
TRADER_POLLING_INTERVAL=25000
CACHE_TTL_DEFAULT=3600

# Performance tuning
WORKER_POOL_SIZE=7
WORKER_TIMEOUT=30000
MESSAGE_TIMEOUT=10000

# Monitoring and logging
WORKER_LOG_LEVEL=info
WORKER_METRICS_ENABLED=true
WORKER_HEALTH_CHECK_INTERVAL=60000

# Error handling
MAX_WORKER_RESTARTS=3
WORKER_RESTART_BACKOFF=1000
WORKER_ERROR_THRESHOLD=10

# Memory management
WORKER_GC_INTERVAL=300000
WORKER_MEMORY_LIMIT=512MB
WORKER_MEMORY_WARNING_THRESHOLD=0.8
